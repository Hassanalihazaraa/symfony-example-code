{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}

{% block body %}

    {% for category in categories %}
        <li>{{ category.name }}

        <ul>
            {% for product in category.products %}
                <li>{{ product.name }}</li>
            {% endfor %}
        </ul>

        </li>
    {% else %}
        <p>No categories found</p>
    {% endfor %}
{% endblock %}
